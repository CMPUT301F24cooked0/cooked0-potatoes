<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/eventDetailsScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            tools:ignore="ExtraText">

            <!-- Event Poster -->
            <ImageView
                android:id="@+id/eventPoster"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/default_event_poster"
                android:scaleType="centerCrop"
                android:layout_marginBottom="20dp"/>

            <!-- Event Name and Day -->
            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swimming Classes"
                android:textSize="34sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/eventDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Tuesdays)"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"/>

            <!-- Edit Event Button -->
            <Button
                android:id="@+id/editEventButton"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_button_background"
                android:text="Edit Event"
                android:textColor="@color/primaryColor" />

            <!-- Time -->
            <TextView
                android:id="@+id/eventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: 3:00 PM - 4:00 PM"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <!-- Date as a String -->
            <TextView
                android:id="@+id/eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: May 15, 2024"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <!-- Registration Opens -->
            <TextView
                android:id="@+id/registrationOpens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration opens: May 1"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <!-- Register By -->
            <TextView
                android:id="@+id/registerBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register by: May 10"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <!-- Spots Created -->
            <TextView
                android:id="@+id/spotsCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spots Created: 20"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <!-- Waiting List Count -->
            <TextView
                android:id="@+id/waitingListCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiting List: 10/20"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
