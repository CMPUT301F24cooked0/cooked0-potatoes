<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".EventDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/event_poster_crop"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/event_poster_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/noeventimage" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/event_name_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EventName"
            android:textAlignment="textStart"
            android:textColor="@color/defaultButtonColor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_desc_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EventDesc" />

    </LinearLayout>

</FrameLayout>