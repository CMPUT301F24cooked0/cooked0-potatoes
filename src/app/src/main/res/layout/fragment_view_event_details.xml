<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appBackground"
    tools:context=".ViewEventDetailsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/event_poster_crop"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/event_poster_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/event_name_placeholder"
        android:layout_width="344dp"
        android:layout_height="44dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="(null)"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_desc_placeholder"
        android:layout_width="358dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="(null)"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/TimeDisplayLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/timeIconView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/time_icon" />

        <TextView
            android:id="@+id/event_time_placeholder"
            android:layout_width="124dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="(null)" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/EventDateDisplayLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/calendarIconView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/calendar_icon" />

        <TextView
            android:id="@+id/event_date_placeholder"
            android:layout_width="124dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="(null)" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/RegisterStartDisplayLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/startDateIconView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/start_date_icon" />

        <TextView
            android:id="@+id/register_start_placeholder"
            android:layout_width="124dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="(null)" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/RegisterEndDisplayLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/endDateIconView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/end_date_icon" />

        <TextView
            android:id="@+id/register_end_placeholder"
            android:layout_width="124dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="(null)" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/GeolocationDisplayLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/geolocationIconView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/geolocation_icon" />

        <TextView
            android:id="@+id/geolocation_notice_placeholder"
            android:layout_width="124dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="This event does not require geolocation to join" />
    </LinearLayout>

    <Button
        android:id="@+id/join_waitlist_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/acceptButtonColor"
        android:text="Join Waiting List" />

</LinearLayout>