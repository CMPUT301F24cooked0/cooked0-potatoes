<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <FrameLayout
        android:id="@+id/welcomeFacilityFrame"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:background="#F6F8FA"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/starIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:translationX="10dp"
            android:translationY="15dp"
            app:srcCompat="@android:drawable/star_off" />

        <TextView
            android:id="@+id/welcomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Welcome,"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:translationX="40dp"
            android:translationY="15dp" />

        <TextView
            android:id="@+id/facilityNamePlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="<Facility Name>"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:translationX="40dp"
            android:translationY="50dp" />

        <TextView
            android:id="@+id/editFacilityLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_facility_str"
            android:textColor="#20232C"
            android:textSize="14sp"
            android:translationX="40dp"
            android:translationY="100dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/eventsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="153dp"
        android:elevation="5dp"
        android:text="Events"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeFacilityFrame" />

    <ImageView
        android:id="@+id/noEventPhoto"
        android:layout_width="346dp"
        android:layout_height="236dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventsTitle"
        app:srcCompat="@drawable/noeventimage" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="230dp"
        android:layout_height="78dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="91dp"
        android:text="No Events Scheduled,  Create One Now!"
        android:textAlignment="center"
        android:textColor="@color/defaultButtonColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noEventPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>